<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layout.header.name_app"), '#', id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("layout.header.request"), admin_requests_path %></li>
            <li><%= link_to t("layout.header.category"), admin_categories_path %></li>
            <li><%= link_to t("layout.header.product"), admin_products_path %></li>
          <% else %>
            <li><%= link_to t("layout.header.request"), requests_path %></li>
            <li><%= link_to t("layout.header.product"), products_path %></li>
            <li><%= link_to t("layout.header.cart"), cart_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if current_user.avatar.present? %>
                <%= image_tag(current_user.avatar, size: "20") %>
                  <b class="caret"></b>
              <% else %>
                <%= image_tag("icon_mua_hang.jpg", size: "20") %>
                  <b class="caret"></b>
              <% end %>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layout.header.update"),
                edit_user_registration_path(current_user) %></li>
              <li><%= link_to t("layout.header.profile"), current_user %></li>
              <li class="divider"></li>
              <li class="<%= "active" if current_page?(destroy_user_session_path)%>">
                <%= link_to t("layout.header.logout"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout.header.login"), new_user_session_path %></li>
          <li><%= link_to t("layout.header.signup"), new_user_registration_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
